@import 'nib';

global-reset();

@import './variables';
@import './mixins';
@import './fonts';
@import './reset';

html {
	height: 100%;
	box-sizing: border-box;
	background-image: url('/resources/images/body-bg-2.jpg');
	background-attachment: fixed;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
	//background: #000000;
	//background: linear-gradient(to top, #000000, #041C41 );
	font-family: 'Roboto';
	font-weight: 300;

	+desktop() {
		font-size: 16px;
	}

	+mobile() {
		font-size: 12px;
	}
}

body {
	height: 100%;
}

.popup-overlay {
  background: rgba(0, 0, 0, 0.75);
}

.full-screen {
	position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin-top: 4rem;
  margin-left: 4rem;
  padding-bottom: 5rem;
  padding-right: 5rem;
  z-index: 999;
}

.popup-modal{
  background: #ffffff;
  width: 38vw;
	padding: 1.5rem 3rem;
	border-radius: 1rem;
}

.form .form-group label{
	display: block;
	margin-bottom: 0.4rem;
  margin-top: 1rem;
}
.form .form-group input{
	display: block;
	border: 1px solid #333333;
	padding: 0.5rem;
	box-shadow: none;
	width: 100%;
  background: #f4f4f4;
	border-radius: 5px;
}

.form .submit-btn{
	display: block;
	margin: 1rem auto;	
	width: 50%;
	border: 2px solid #333333;
	background: #eeeeee;
	border-radius: 5px;
	box-shadow: none;
	padding: 0.3rem;
	font-size: 1rem;
  font-weight: 500;
	transition: all 0.2s;
}

.form .submit-btn:hover{
	background: #333333;
	color: #f4f4f4;
}

#precisely-demo-app-container {
	height: 100%;
	width: 100%;
	
	// Components
	@import './components/Room';
	@import './components/Me';
	@import './components/ChatInput';
	@import './components/Peers';
	@import './components/Peer';
	@import './components/PeerView';
	@import './components/Stats';
	@import './components/Notifications';
	@import './components/NetworkThrottle';
}

// Hack to detect in JS the current media query
#precisely-demo-app-media-query-detector {
	position: relative;
	z-index: -1000;
	bottom: 0;
	left: 0;
	height: 1px;
	width: 1px;

	// In desktop let it "visible" so elem.offsetParent returns the parent element
	+desktop() {}

	// In mobile ensure it's not displayed so elem.offsetParent returns null
	+mobile() {
		display: none;
		position: fixed; // Required for old IE
	}
}
