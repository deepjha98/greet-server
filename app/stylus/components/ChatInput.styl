[data-component='ChatInput'] {
	position: relative;
	height: 100%;
	width: 100%;

	> textarea {
		height: 100%;
		width: 100%;
		padding: 4px 8px;
		resize: none;
		outline: none;
		background-color: rgba(#0e0e0e, 1);
		color: #fff;
		font-family: inherit;
		font-size: 13px;
		font-weight: 400;
		line-height: 22px;
		border: none;

		+placeholder() {
			color: rgba(#fff, 0.55);
		}

		&:disabled {
			opacity: 0.65;
		}
	}
}
